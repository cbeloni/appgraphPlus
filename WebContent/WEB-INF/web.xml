<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">


	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
		<param-value>0</param-value>
	</context-param>

	<!-- Login filter -->
	<filter>
		<filter-name>UsuarioAutenticacao</filter-name>
		<filter-class>com.appgraph.filters.UsuarioAutenticacaoFilter</filter-class>
	</filter>
	<filter>
		<filter-name>RestAutenticacao</filter-name>
		<filter-class>com.appgraph.filters.RestAutenticacaoFilter</filter-class>
	</filter>
	<!-- Set the login filter to secure all the pages in the /secured/* path 
		of the application -->
	<filter-mapping>
		<filter-name>UsuarioAutenticacao</filter-name>
		<url-pattern>/secured/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>RestAutenticacao</filter-name>
		<url-pattern>/rest/graficos/*</url-pattern>
	</filter-mapping>

	<!-- By default go to secured welcome page -->
	<welcome-file-list>
		<welcome-file>secured/welcome.xhtml</welcome-file>
	</welcome-file-list>

	<!--<listener> <listener-class>org.jboss.weld.environment.servlet.Listener</listener-class> 
		</listener> -->

	<resource-env-ref>
		<resource-env-ref-name>BeanManager</resource-env-ref-name>
		<resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
	</resource-env-ref>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>com.appgraph.servlet.ServletConfig</listener-class>
	</listener>

	<servlet>
		<servlet-name>Jersey Web Application</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.appgraph.service.rest</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Jersey Web Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
</web-app>